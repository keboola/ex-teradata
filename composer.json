{
    "name": "keboola/ex-teradata",
    "description": "Teradata database extractor",
    "license": "MIT",
    "require": {
        "php": "^8",
        "dibi/dibi": "^4",
        "keboola/csv": "^2.0",
        "keboola/php-component": "^9"
    },
    "require-dev": {
        "dg/bypass-finals": "^1",
        "keboola/coding-standard": "^15",
        "keboola/datadir-tests": "^5.6",
        "keboola/php-temp": "^2",
        "mockery/mockery": "^1",
        "php-parallel-lint/php-parallel-lint": "^1",
        "phpstan/phpstan": "^1",
        "phpstan/phpstan-mockery": "^1",
        "phpunit/phpunit": "^9",
        "rector/rector": "^1.1",
        "symfony/process": "^6"
    },
    "autoload": {
        "psr-4": {
            "Keboola\\ExTeradata\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Keboola\\ExTeradata\\Tests\\Unit\\": "tests/phpunit/",
            "Keboola\\ExTeradata\\Tests\\Functional\\": "tests/functional/"
        }
    },
    "scripts": {
        "tests-phpunit": "phpunit",
        "tests-datadir": "phpunit tests/functional",
        "tests": [
            "@tests-phpunit"
        ],

        "phpstan": "phpstan analyse ./src ./tests --level=max --no-progress -c phpstan.neon",
        "phpcs": "phpcs -n --ignore=vendor --extensions=php .",
        "phpcbf": "phpcbf -n --ignore=vendor --extensions=php .",
        "phplint": "parallel-lint -j 10 --exclude vendor .",
        "build": [
            "@phplint",
            "@phpcs",
            "@phpstan",
            "@tests"
        ],
        "ci": [
            "@composer validate --no-check-publish --no-check-all",
            "@build"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
